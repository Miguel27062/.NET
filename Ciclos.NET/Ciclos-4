using System;

class Program
{
    static void Main()
    {
        int suma = 0;
        int numero;
        int cantidad = 10;

        Console.WriteLine("Por favor ingrese 10 números:");

        
        for (int i = 1; i <= cantidad; i++)
        {
            Console.Write("Número " + i + ": ");
            numero = int.Parse(Console.ReadLine());
            suma += numero; 
        }


        double promedio = (double)suma / cantidad;

     
        Console.WriteLine("La suma total de los numeros ingresados es de : " + suma);
        Console.WriteLine("El promedio total de los números ingresados es de: " + promedio);

      
        Console.ReadKey();
    }
}
