using System;

class Program
{
    static void Main()
    {
        Console.Write("Por favor ingrese un n√∫mero para calcular su factorial: ");
        int numero = int.Parse(Console.ReadLine());

      
        long factorial = CalcularFactorial(numero);

   
        Console.WriteLine("El factorial del numero " + numero + " es de: " + factorial);

 
        Console.ReadKey();
    }

  
    static long CalcularFactorial(int n)
    {
   
        if (n == 0 || n == 1)
            return 1;

        long resultado = 1;

     
        for (int i = 2; i <= n; i++)
        {
            resultado *= i;
        }

        return resultado;
    }
}
